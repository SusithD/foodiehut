<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <solid android:color="#FFFFFF"/> <!-- White background, adjust as needed -->

    <!-- Corner Radius -->
    <corners android:radius="8dp"/> <!-- Rounded corners, adjust as needed -->

    <!-- Border (Optional) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD"/> <!-- Light gray border, adjust as needed -->

    <!-- Padding (Optional) -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
