<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the card -->
    <solid android:color="#FFFFFF"/> <!-- White background, change if needed -->

    <!-- Corner radius for rounded corners -->
    <corners android:radius="12dp"/> <!-- Adjust the radius to your preference -->

    <!-- Shadow effect -->
    <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp"/> <!-- Padding for shadow -->

    <!-- Stroke to define card border (optional) -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0"/> <!-- Light grey border, change if needed -->
</shape>
