<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidx="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="6dp"
    android:padding="16dp"
    android:background="@drawable/layout_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp">

        <!-- Topic -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Summaries"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"/>

        <!-- Subtopic -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details of your recent orders"
            android:textStyle="normal"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="12dp"/>

        <!-- Order ID Label and Value -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID:"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>

        <!-- Total Price Label and Value -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price:"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100.00"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>

        <!-- Status Label and Value -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivered"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>

        <!-- Order Date Label and Value -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Date:"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-08-15"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>

        <!-- Delivery Location Label and Value -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Location:"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/delivery_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 Main St, City, Country"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
